# Environment Configuration
# Copy this file to .env.local for local development

# =============================================================================
# DEPLOYMENT SETUP: Frontend (Vercel) + Backend Database (Convex)
# =============================================================================
# Your Next.js app will be deployed on Vercel
# Convex provides the real-time database backend as a service
# The frontend connects to Convex via these URLs

# Convex Realtime Database (Backend Service)
CONVEX_DEPLOYMENT=your_convex_deployment_url
NEXT_PUBLIC_CONVEX_URL=your_convex_url

# =============================================================================
# AI SERVICES
# =============================================================================

# Google Gemini AI (Free tier available)
GOOGLE_AI_API_KEY=your_gemini_api_key_here

# =============================================================================
# WEATHER API OPTIONS (Choose one)
# =============================================================================

# Option 1: Open-Meteo (Completely Free - Recommended)
NEXT_PUBLIC_WEATHER_API_URL=https://api.open-meteo.com/v1
NEXT_PUBLIC_WEATHER_PROVIDER=open-meteo

# Option 2: OpenWeatherMap (Requires API Key - More features)
# NEXT_PUBLIC_OPENWEATHER_API_KEY=your_openweather_api_key_here
# NEXT_PUBLIC_WEATHER_PROVIDER=openweathermap

# =============================================================================
# MAP & GEOCODING (Free Services)
# =============================================================================

# OpenStreetMap Geocoding (Free - no key required)
NEXT_PUBLIC_NOMINATIM_URL=https://nominatim.openstreetmap.org

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# For production, set to your Vercel domain:
# NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Secret (Generate a secure 32+ character string)
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long_secure_string

# NextAuth Secret (Generate a secure 32+ character string)
NEXTAUTH_SECRET=your_nextauth_secret_32_characters_long

# =============================================================================
# API CONFIGURATION
# =============================================================================

NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api

# For production, set to your Vercel domain:
# NEXT_PUBLIC_API_BASE_URL=https://your-app.vercel.app/api

# =============================================================================
# FEATURE FLAGS
# =============================================================================

NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_VOICE_CHAT=true
NEXT_PUBLIC_ENABLE_REALTIME=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

NEXT_PUBLIC_ENABLE_DEBUG=true
# DISABLE_SERVICE_WORKER=true
